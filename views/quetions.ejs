<%- include('includes')%>

    <style>
        .qnarea {
            display: none;
        }
        
        #quetion {
            width: 20%;
            border: 3px solid blue
        }
    </style>

    <body>
        <%- include('header') %>
            <%- include('questions-menu')%>
                <h1>

                </h1>
                <div class="qnarea" id="post">

                    <form method="post" class="postqn" action="/question/post">

                        <input type="text" id="quetion" placeholder="Type your question here..." name="question" required>
                        <select name="questiontype" required>
            
               <option value="cse">cse</option>
               <option value="ece">ece</option>
               <option value="mech">mechanical</option>
               <option value="eee">eee</option>
           
           </select>
                        <br> <br>
                        <input class="btn1" type="submit">
                    </form>
                </div>



                <div class="qnarea" id="cse">
                    <h1>cse</h1>
                    <% question.forEach (function(x){%>
                        <% if (x.type=='cse'){%>
