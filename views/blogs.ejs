<!DOCTYPE html>
<html>

<head>

</head>
<%- include('includes')%>


    <body>
        <%- include('header') %>
            <br> <br>
            <div class="searchbar" style="border: 2px solid #5680E9; width:50%; padding: 5px;">
                <i class="fa fa-search icon" style="font-size: 25px; color: #5680E9;"></i>
                <input type="text" id="search" autocomplete="off" placeholder="search..." "> <br>
            </div>
            <div class="blogdisplay "></div>
            <script>
                $(document).ready(function() {
                    $("#search ").keyup(function() {
                        var x = '/searchblog/' + $('#search').val()

                        axios.post(x).then(response => {
                            for (i = 0; i < response.data.length; i++) {
                                var files = '<a href="/blog/ ' + response.data[i].id + ' "><h3>' + response.data[i].title + '</h3></a>'
                                $(".blogdisplay ").html(files);


                            }
                        }).catch(() => {

                        })

                    });
                });
            </script>
    </body>

</html>